#!/usr/bin/env bash
# A Bash script that configures an Ubuntu server with localhost 127.0.0.2
# facebook.com 8.8.8.8

# Check if the script is run with sudo/root privileges
if [ "$EUID" -ne 0 ]; then
    echo "This script must be run as root. Use sudo."
    exit 1
fi

# Define the desired mappings
LOCALHOST_IP="127.0.0.2"
FACEBOOK_IP="8.8.8.8"

# Backup the original /etc/hosts file
cp /etc/hosts /etc/hosts.bak

# Add or update entries in /etc/hosts
echo -e "$LOCALHOST_IP\tlocalhost" >> /etc/hosts
echo -e "$FACEBOOK_IP\tfacebook.com" >> /etc/hosts

# Display success message
echo "Configuration completed successfully."

# Display the updated /etc/hosts file
cat /etc/hosts

